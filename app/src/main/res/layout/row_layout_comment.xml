<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:onClick="card_clicked"
        android.support.v7.cardview:cardElevation="5dp"
        android.support.v7.cardview:cardPreventCornerOverlap="false"
        android.support.v7.cardview:contentPadding="2dp"
        android.support.v7.cardview:paddingEnd="5dp"
        android.support.v7.cardview:paddingStart="5dp"
        app:cardUseCompatPadding="true"
        android.support.v7.cardview:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_name_comment"
                android:text="User"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comment_box"
                android:hint="Comment"
                android:layout_below="@+id/user_name_comment"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>